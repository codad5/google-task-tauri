{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Google Task",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": false,
        "save": false
      },
      "notification": {
        "all": true 
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/codad5.google.task/**",
          "$APPDATA/codad5.google.task/*",
          "$APPDATA/codad5.google.task",
          "$APPDATA/**",
          "$APPDATA/*",
          "$APPDATA",
          "$DOWNLOAD/codad5.google.task/**",
          "$DOWNLOAD/codad5.google.task/*",
          "$DOWNLOAD/codad5.google.task",
          "$DOWNLOAD/**",
          "$DOWNLOAD/*",
          "$DOWNLOAD",
          "$APPLOCALDATA/codad5.google.task/**",
          "$APPLOCALDATA/codad5.google.task/*",
          "$APPLOCALDATA/codad5.google.task",
          "$APPLOCALDATA/**",
          "$APPLOCALDATA/*",
          "$APPLOCALDATA"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "codad5.google.task",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Google Task",
        "width": 800,
        "height": 600
      }
    ]
  }
}
